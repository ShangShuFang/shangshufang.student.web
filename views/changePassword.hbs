<body class="kt-page--loading-enabled kt-page--loading kt-header--fixed kt-header--minimize-topbar kt-header-mobile--fixed kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-subheader--enabled kt-subheader--transparent kt-page--loading">
<div id="kt_header"></div>
<div class="kt-grid kt-grid--ver kt-grid--root kt-page">
  <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v1" id="kt_login">
    <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">
      <div class="kt-grid__item kt-grid__item--order-tablet-and-mobile-2 kt-grid kt-grid--hor kt-login__aside shs-login-left">
        <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--ver">
          <div class="kt-grid__item kt-grid__item--middle">
            <h3 class="kt-login__title"> </h3>
            <h4 class="kt-login__subtitle"> </h4>
          </div>
        </div>
        <div class="kt-grid__item">
          <div class="kt-login__info">
            <div class="kt-login__copyright">
              &copy 2020~2021 西安樱桃谷信息技术有限公司
            </div>
            <div class="kt-login__menu">
              <a href="#" class="kt-link">联系我们</a>
            </div>
          </div>
        </div>
      </div>
      <div class="kt-grid__item kt-grid__item--fluid  kt-grid__item--order-tablet-and-mobile-1  kt-login__wrapper">
        <div class="kt-login__body" id="kt_changePassword">
          <div class="kt-login__form">
            <div class="kt-login__title">
              <strong style="color: #edaa2e; font-size: 3.5rem; font-family: '魏碑-简',sans-serif">上書房</strong> <span style="font-size: 2rem; font-family: '魏碑-简',sans-serif">智慧教育</span>
              <h2 style="font-family: '魏碑-简',sans-serif">
                <strong>修改密码</strong>
              </h2>
            </div>
            <form class="kt-form" novalidate>
              <div class="form-group">
                <input type="password"
                        class="form-control"
                        :class="{'is-invalid': showOldPasswordAlert}"
                        placeholder="请输入原始密码"
                        maxlength="12"
                        v-model.trim="oldPassword">
                <div class="invalid-feedback" v-if="showOldPasswordAlert" v-text="oldPasswordAlertMessage"></div>
              </div>

              <div class="form-group">
                <input type="password"
                        class="form-control"
                        :class="{'is-invalid': showPasswordAlert}"
                        placeholder="请输入新密码"
                        maxlength="12"
                        v-model.trim="password">
                <div class="invalid-feedback" v-if="showPasswordAlert" v-text="passwordAlertMessage"></div>
              </div>

              <div class="form-group">
                <input type="password"
                        class="form-control"
                        :class="{'is-invalid': showConfirmPasswordAlert}"
                        placeholder="请再次输入新密码"
                        maxlength="12"
                        v-model.trim="confirmPassword">
                <div class="invalid-feedback" v-if="showConfirmPasswordAlert" v-text="confirmPasswordAlertMessage"></div>
              </div>
              

              <div class="kt-login__actions">
                <a href="/" class="kt-link kt-login__link-forgot" style="margin-left: 3px">
                  <i class="flaticon2-reply"></i>
                  返回首页
                </a>
                <button type="button"
                        class="btn btn-primary btn-elevate kt-login__btn-primary"
                        @click="onChange">
                  修改
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>

